{{!-- Page that will be rendered when add new recipe button is selected --}}
<section class="container">
    <h1 class="recipe-title">Add Recipe Link Below:</h1>
    <input class="form-input" type="text" id="recipe-link"/>
    <button class="btn" type="submit">Populate my Recipe!</button>
{{#if submit}}
  <div class="container">
    <h1 class="recipe-name">{{recipe.name}}</h1>
    <h3 class="recipe-description">{{recipe.description}}</h3>
  </div>
  {{!-- We can figure this out later as an extra step
  <div class="container">
   <img src="/images/{{filename}}" alt="{{description}}">
  </div> --}}
  <div class="container">
    <h3 class="ingredients">
      {{recipe.ingredients}}
    </h3>
    <h3 class="instructions">
      {{recipe.instructions}}
    </h3>
  </div>
  <div class="container">
    {{!-- NUTRITIONAL PICTURE WILL GO HERE --}}
  </div>
  <button class="btn" type="submit">Save to my Recipes</button>
  <button class="btn" type="submit">Return to homepage</button>
  {{/if}}
</section>